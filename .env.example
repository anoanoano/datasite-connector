# DataSite Connector Environment Configuration
# Copy this file to .env and customize the values

# SyftBox Configuration
DATASITE_SYFTBOX_DATASITE_PATH="~/datasite"

# Content Storage
DATASITE_CONTENT_STORAGE_PATH="./private_content"
DATASITE_ENCRYPTION_KEY_PATH="./keys/content.key"

# MCP Server Configuration
DATASITE_MCP_SERVER_HOST="localhost"
DATASITE_MCP_SERVER_PORT=8080
DATASITE_MCP_SERVER_NAME="datasite-connector"

# Authentication & Access Control
DATASITE_AUTH_TOKEN_EXPIRY=3600
DATASITE_MAX_REQUESTS_PER_MINUTE=60

# Privacy Settings
DATASITE_ENABLE_DIFFERENTIAL_PRIVACY=true
DATASITE_PRIVACY_EPSILON=1.0

# Logging
DATASITE_LOG_LEVEL="INFO"
DATASITE_LOG_FILE="./logs/datasite-connector.log"

# Development
DATASITE_DEBUG_MODE=false